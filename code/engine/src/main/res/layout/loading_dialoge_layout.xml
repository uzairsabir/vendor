<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/margin_15"
        android:background="@color/white"
        android:layout_height="@dimen/margin_9">

        <ProgressBar
            android:id="@+id/listsviewloader1"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="@dimen/margin_3"
            android:layout_height="@dimen/margin_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_1_5"
            android:indeterminateDrawable="@drawable/aw_progressbar" />

        <TextView
            android:id="@+id/loadingtext"
            android:layout_width="wrap_content"
            android:layout_below="@id/listsviewloader1"
            android:text="Loading..Please wait"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_1"
            android:textColor="@color/gray_8"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>