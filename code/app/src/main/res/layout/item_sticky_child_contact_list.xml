<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_5"
        android:clickable="true"
        android:background="@drawable/bg_white_grey_hover"
        android:paddingLeft="@dimen/margin_1">

        <ImageView
            android:id="@+id/source_image"
            android:layout_width="@dimen/margin_2"
            android:src="@drawable/contact_icon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/add_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_blue_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_1"
            android:layout_alignParentRight="true" />

        <org.vanguardmatrix.engine.customviews.CustomTextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_toLeftOf="@+id/add_icon"
            android:layout_toRightOf="@+id/source_image"
            android:gravity="center_vertical"
            android:text="Uzair Sabir"
            android:textColor="@color/black" />


    </RelativeLayout>

</LinearLayout>