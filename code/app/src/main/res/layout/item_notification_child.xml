<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_7"
        android:background="@drawable/bg_white_blue_hover">


        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="@dimen/margin_1"
            android:layout_height="@dimen/margin_1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_1"
            android:background="@drawable/circle_blue" />

        <TextView
            android:id="@+id/time_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_small"
            android:text="9:00 AM"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize_label_7" />

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/margin_15"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@+id/icon_image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="James Brown"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/textsize_label_4" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title"
            android:layout_margin="@dimen/margin_small"
            android:text="323"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize_label_4" />


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@+id/icon_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Lawn Inquiry"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/textsize_label_4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_home_bg" />
    </RelativeLayout>

</LinearLayout>