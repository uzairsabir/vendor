<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_8"
        android:background="@drawable/bg_white_blue_hover"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <TextView
                android:layout_width="@dimen/margin_6"
                android:layout_height="@dimen/margin_6"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_pending_orange_with_round_edges"
                android:gravity="center"
                android:text="$"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_4"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Uzair Sabir alisndlasnd"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/textsize_label_2"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/reply_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_11"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/reply_icon"
                    android:layout_width="@dimen/margin_1"
                    android:layout_height="@dimen/margin_1"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/reply_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toRightOf="@+id/reply_icon"
                    android:text="Replied"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/textsize_label_4" />


            </RelativeLayout>

            <TextView
                android:id="@+id/category_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_text"
                android:layout_marginTop="@dimen/margin_very_small"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Lawn Care"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/textsize_label_2"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_text"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="paid"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/textsize_label_4" />

            <TextView
                android:id="@+id/service_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_text"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="paid"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/textsize_label_6" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <ProgressBar
                android:id="@+id/listsviewloader"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="@dimen/margin_2"
                android:layout_height="@dimen/margin_2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_1"
                android:layout_marginTop="@dimen/margin_1_5"
                android:indeterminateDrawable="@drawable/aw_progressbar"
                android:visibility="visible" />

            <Button
                android:id="@+id/ping"
                android:layout_width="@dimen/margin_6"
                android:layout_height="@dimen/margin_2_5"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_1"
                android:layout_marginTop="@dimen/margin_1"
                android:background="@drawable/bg_green_hover"
                android:text="Ping"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_label_7" />

            <Button
                android:id="@+id/view"
                android:layout_width="@dimen/margin_6"
                android:layout_height="@dimen/margin_2_5"
                android:layout_below="@+id/ping"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_1"
                android:background="@drawable/bg_green_hover"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_label_7" />


        </RelativeLayout>


    </LinearLayout>
</LinearLayout>