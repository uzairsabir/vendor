<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_5"
        android:background="@drawable/bg_white_blue_hover">


        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_1"
            android:checked="true"
            app:kswAnimationDuration="5"
            app:kswBackColor="@color/green_tip"
            app:kswThumbColor="@color/white"
            app:kswThumbRadius="10dp"
            app:kswTintColor="@color/color_red" />

        <TextView
            android:id="@+id/status_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_1"
            android:text="ON"
            android:textColor="@color/app_text_blue"
            android:textSize="@dimen/textsize_label_4"
            android:textStyle="bold"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_loader"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="@dimen/margin_2"
            android:layout_height="@dimen/margin_2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_1"
            android:indeterminateDrawable="@drawable/aw_progressbar"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_2"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_label_4" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_home_bg"
            android:textColor="@color/black" />
    </RelativeLayout>

</LinearLayout>