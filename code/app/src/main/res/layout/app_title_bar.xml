<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/page_title_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/app_title_bar_bg">

        <TextView
            android:id="@+id/page_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_title_name"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_label_1" />

        <RelativeLayout
            android:id="@+id/page_left_container"
            android:layout_width="@dimen/margin_7"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_blue_hover"
            android:visibility="gone">

            <TextView
                android:id="@+id/left_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_2_5"
                android:text="Home"
                android:textColor="@color/app_text_blue"
                android:textSize="@dimen/textsize_label_1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/leftimageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_arrow_white_title_bar"
                android:textColor="@color/app_text_blue"
                android:textSize="@dimen/textsize_label_1" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/page_left_text"
            android:layout_width="@dimen/margin_10"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/hometext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_2_5"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_label_1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/lefttextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_arrow_white_title_bar"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_label_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/page_right_text"
            android:layout_width="@dimen/margin_7"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_blue_hover">

            <TextView
                android:id="@+id/righttextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_2"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_label_1" />

            <ProgressBar
                android:id="@+id/progress_loader"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="@dimen/margin_2"
                android:layout_height="@dimen/margin_2"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/progressbar_whit"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/rightimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/add_vendor"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_container_top"
            android:layout_width="@dimen/margin_7"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/page_right_text"
            android:background="@drawable/bg_blue_hover"
            android:visibility="invisible">

            <TextView
                android:id="@+id/search_container_top_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_2"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_label_1"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/search_container_top_progress_loader"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="@dimen/margin_2"
                android:layout_height="@dimen/margin_2"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/progressbar_whit"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/search_container_top_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/search_icon_white" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>