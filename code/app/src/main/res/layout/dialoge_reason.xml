<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_1"
        android:text="Reason: "
        android:textColor="@color/who_do_u_blue"
        android:textSize="@dimen/margin_2" />

    <EditText
        android:id="@+id/msg_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:layout_below="@+id/title"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@drawable/bg_blue_with_round_edges_center_white"
        android:ellipsize="end"
        android:gravity="top"
        android:inputType="textCapSentences"
        android:maxLines="5"
        android:paddingLeft="@dimen/margin_1"
        android:paddingTop="@dimen/margin_1"
        android:text="uzair"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/margin_2" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_below="@+id/msg_input">

        <Button
            android:id="@+id/send_message"
            android:layout_width="@dimen/margin_13"
            android:layout_height="@dimen/margin_4"
            android:background="@drawable/bg_blue_with_round_edges"
            android:text="Send Message"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_label_2" />

        <Button
            android:id="@+id/cancel_message"
            android:layout_width="@dimen/margin_13"
            android:layout_height="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_2"
            android:layout_toRightOf="@+id/send_message"
            android:background="@drawable/bg_blue_with_round_edges"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_label_2" />

    </RelativeLayout>

</RelativeLayout>