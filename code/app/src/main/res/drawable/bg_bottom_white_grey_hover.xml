<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dip" />

            <stroke android:width="0.01dip" android:color="@color/underline_color" />

            <gradient android:angle="-90" android:endColor="@color/underline_color" android:startColor="@color/underline_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dip" />

            <stroke android:width="0.01dip" android:color="@color/underline_color" />

            <solid android:color="@color/underline_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dip" />

            <stroke android:width="0.01dip" android:color="@color/white" />

            <solid android:color="@color/white" />
        </shape>
    </item>

</selector>